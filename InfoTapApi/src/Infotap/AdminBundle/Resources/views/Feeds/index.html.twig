{% extends '::layout/admin_base.html.twig' %}

{% block content -%}
    <h1>Feeds list</h1>

    <table class="records_list table-bordered table-condensed table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Message</th>
                <th>Aadharid</th>
                <th>Gender</th>
                <th>Age</th>
                <th>Area</th>
               
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('feeds_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.message }}</td>
                <td>{{ entity.aadharId }}</td>
                <td>{{ entity.gender }}</td>
                <td>{{ entity.ageFrom }}-{{ entity.ageTo }}</td>
                <td>
                {{ entity.area }}
                {{ entity.city }}
                {{ entity.state }}
                {{ entity.pincode }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('feeds_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}